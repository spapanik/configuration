[core]
	editor = vim
[push]
	default = current
[color]
	ui = always
[alias]
	cm = checkout master
	rem = rebase master
	mm = merge master
	df = difftool
	dnc = diff --no-color
	pr = pull --rebase
	this = rev-parse --abbrev-ref HEAD
	unstage = reset HEAD --
	nuke = "!f() { git reset --hard origin/$(git this); }; f"
	do = "!f() { git difftool origin/$(git this); }; f"
	da = "!f() { git difftool $(git merge-base $1 $(git this)); }; f"
	dm = "!f() { git difftool $(git merge-base master $(git this)); }; f"
	destroy = "!f() { git branch -D $1; git push origin --delete $1; }; f"
	pushit = "!f() { git push -u origin $(git this); }; f"
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	lga = log --all --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[diff]
	tool = meld
[merge]
	tool = meld
[fetch]
	prune = true
[include]
	path = ./.gitconfig.local
